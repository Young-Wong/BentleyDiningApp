<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yp.campusfood.MainActivity">

    <ImageView
        android:id="@+id/simple_anim"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />

<TabHost
    android:id="@+id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <FrameLayout android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <!-- first tab -->
            <LinearLayout android:id="@+id/tab1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                   android:background="@drawable/lacava"
                    />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/image1"
                    android:background="@color/Bentley"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    android:paddingStart="20dp"
                    android:text="Lower Cafe"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/studentcenter"
                    />
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/image2"
                        android:background="@color/Bentley"
                        android:textColor="@color/White"
                        android:textSize="18sp"
                        android:paddingStart="20dp"
                        android:text="The 921"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/einstein"
                    />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/image3"
                        android:background="@color/Bentley"
                        android:textColor="@color/White"
                        android:textSize="18sp"
                        android:paddingStart="20dp"
                        android:text="Deloitte Cafe"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/image4"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/currito"
                    />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/image4"
                        android:background="@color/Bentley"
                        android:textColor="@color/White"
                        android:textSize="18sp"
                        android:paddingStart="20dp"
                        android:text="Currito"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/image5"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/dunkin"
                    />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/image5"
                        android:background="@color/Bentley"
                        android:textColor="@color/White"
                        android:textSize="18sp"
                        android:paddingStart="20dp"
                        android:text="Dunkin' Donuts"/>
                </RelativeLayout>

            </LinearLayout>
            </ScrollView>
            <!--  second tab -->
            <LinearLayout android:id="@+id/tab2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <!--  third tab -->
            <LinearLayout android:id="@+id/tab3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#70ffcf">

                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/web">
                </WebView>
            </LinearLayout>


        </FrameLayout>

    </LinearLayout>

</TabHost>
    </LinearLayout>
